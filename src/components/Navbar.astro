---
<nav
  class="w-full z-50 mb-0 md:mb-4 sticky top-0 md:top-8 flex justify-center text-fg"
>
  <div
    class="bg-bg p-4 mx-0 md:mx-4 lg:mx-12 md:p-3 lg:px-4 rounded-none md:rounded-xl md:w-2/3 w-full lg:w-1/2 bg-bg/60 backdrop-blur-xl md:flex md:items-center md:justify-between"
  >
    <div class="flex items-center justify-between">
      <a class="flex cursor-pointer items-center" href="/">
        <span
          class="text-[20px] md:text-[22px] cursor-pointer antialiased font-bold text-fg"
          >Home</span
        >
      </a>
      <span class="toggler self-center">
        <button class="toggler md:hidden">
          <img src="/menu.svg" alt="menu" class="w-5 h-5" />
        </button>
      </span>
    </div>
    <ul
      class={`md:flex md:items-center ml-0 z-[-1] md:z-auto navlist list-none hidden transition-all duration-500`}
    >
      <li class="mx-0 my-6 md:my-0">
        <a
          class="text-[17px] md:text-[20px] px-0 md:px-2 py-1 rounded-md hover:!text-fg font-medium antialiased"
          href="/blog">Blog</a
        >
        <span class="hidden md:inline text-lg text-gray-500">/</span>
      </li>
      <li class="mx-0 my-6 md:my-0">
        <a
          class="text-[17px] md:text-[20px] px-0 md:px-2 py-1 rounded-md hover:!text-fg font-medium antialiased"
          href="/projects">Projects</a
        >
        <span class="hidden md:inline text-lg text-gray-500">/</span>
      </li>
      <li class="mx-0 my-6 md:my-0">
        <a
          class="text-[17px] md:text-[20px] px-0 md:px-2 py-1 rounded-md hover:!text-fg font-medium antialiased"
          href="/contact">Contact</a
        >
      </li>
    </ul>
  </div>
</nav>
<script>
  const navlist = document.querySelector(".navlist");
  const toggler = document.querySelector(".toggler");
  if (toggler && navlist) {
    toggler.addEventListener("click", () => {
      navlist.classList.toggle("hidden");
    });
  }
</script>
