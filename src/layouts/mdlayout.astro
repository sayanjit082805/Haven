---
import Layout from "./layout.astro";
const { frontmatter, readTime } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="w-full flex justify-center md:pt-8 flex-col items-center gap-2">
    <div class="md:w-2/3 pt-4 px-4 w-full lg:w-1/2 flex-col">
      <h1 class="text-fg text-2xl md:text-3xl font-bold antialiased">
        {frontmatter.title}
      </h1>
      <p class="text-fg2 text-lg md:text-xl mt-4 text-bright antialiased">
        {frontmatter.description}
      </p>
      <div class="flex flex-row items-center gap-4">
        <div
          class="rounded-full border-4 border-blue1 h-10 w-10 md:w-12 md:h-12 border-solid mt-4"
        >
          <img
            src="/avatar.jpg"
            alt="avatar"
            class="rounded-full md:h-10 md:w-10 h-8 w-8"
          />
        </div>
        <p
          class="text-fg3 text-[16px] md:text-[20px] mt-4 text-bright antialiased"
        >
          {frontmatter.date}
        </p>
        <p
          class="text-fg3 text-[16px] md:text-[20px] mt-4 text-bright antialiased"
        >
          {readTime}
        </p>
      </div>
      <article class="mt-4 text-fg2">
        <slot />
      </article>
      <hr class="w-full border-bg2 my-5 md:my-7" />
    </div>
  </div>
</Layout>
